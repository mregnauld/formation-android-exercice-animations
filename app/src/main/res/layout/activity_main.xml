<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.formationandroid.animations.MainActivity">

	<Button
		android:id="@+id/bouton_jeu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:alpha="0"
		android:background="@color/colorAccent"
		android:onClick="onClickLancerJeu"
		android:padding="@dimen/main_padding_bouton"
		android:text="@string/main_libelle_bouton"
		android:textColor="@android:color/white"
		android:textSize="@dimen/main_taille_libelle_bouton"
		android:translationY="@dimen/main_translation_bouton"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:alpha="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
